import Button from "../components/Button.astro";
---

<MainLayout2>
  <div class="wrapper_element">
    <h1 class="overskrift">Prorgam / "category"</h1>
    <div class="element">
      <div>
        <h2>"title</h2>
        <p>"description"</p>
      </div>
      <img src="img/square.jpg" alt="" />
    </div>
    <h2>You May Also Like:</h2>

    <div class="program_grid">
      <div class="program_element">
        <img src="img/square.jpg" alt="" />
        <h3>Titel p√• program element</h3>
