<style>
  h1 {
    text-transform: uppercase;
    text-align: center;
    border-bottom: solid 2px #000;
    padding-bottom: 2rem;
  }
  .overskrift {
    margin: 10%;
  }
  .element {
    display: grid;
    grid-template-columns: 1fr 1fr;
    margin: 10%;
    justify-content: center;
  }
  .program_grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
