<style>
  body {
    background-image: linear-gradient(rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.5)), url(img/background.png);
    background-size: cover;
  }
  .intro {
    text-align: center;
    color: #000;
    padding: 5%;
    border: solid 2px #000;
    margin: 10%;
  }
  h1 {
    font-size: 3rem;
  }
  .intro p {
    font-style: italic;
    margin-left: 15%;
    margin-right: 15%;
    line-height: 2;
    font-size: 1rem;
  }
  h2.navigation {
    text-align: center;
    color: #58110d;
    text-transform: uppercase;
    font-size: 1.5rem;
  }
  h3 {
    font-size: 1rem;
    text-align: center;
  }
  .program_grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
  }
  .program_element {
    margin: 1rem;
  }
  
</style>
