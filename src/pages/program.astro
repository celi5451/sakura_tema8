import MainLayout2 from "../layouts/MainLayout2.astro";
import Button from "../components/Button.astro";
---

<MainLayout2>
  <div class="wrapper_program">
    <div class="intro">
      <h1>Sakura Festival Program 2023</h1>
      <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Esse nihil aut amet tenetur itaque, rerum ratione veniam expedita asperiores molestiae excepturi autem iste quam totam aperiam illum alias animi! Consequatur.</p>
    </div>
    <h2 class="navigation">Music / Talks / Events / Performances</h2>
    <h3>Program Saturday 22/04 2023</h3>
