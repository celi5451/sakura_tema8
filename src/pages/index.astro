---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <div class="wrapper_index">
    <div class="splash_tekst">
      <h1>Sakura Festival Copenhagen</h1>
      <h2>Spring 2023</h2>
    </div>
    <div class="boxes">
      <div class="box1">
        <h3 class="centered">Music</h3>
        <img src="img/music.png" alt="" />
      </div>
      <div class="box2">
        <h3 class="centered">Talks</h3>
        <img src="img/talks.jpg" alt="" />
      </div>
      <div class="box3">
        <h3 class="centered">Food</h3>
        <img src="img/food.png" alt="" />
      </div>
      <div class="box4">
        <h3 class="centered">Events</h3>
        <img src="img/events.png" alt="" />
      </div>
      <div class="box5">
        <h3 class="centered">Gallery</h3>
        <img src="img/gallery.png" alt="" />
      </div>
      <div class="box6">
        <h3 class="centered">News</h3>
        <img src="img/news.png" alt="" />
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .splash_tekst {
    text-align: center;
    color: #fff;
    margin: 10%;
  }
  .wrapper_index {
  }
  h1 {
    font-size: 4rem;
    border-bottom: solid 1px #fff;
    padding-bottom: 2rem;
  }
  h2 {
    font-size: 3rem;
    font-style: italic;
  }
  .boxes {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    padding: 5%;
    gap: 5%;
  }
  .box1,
  .box2,
  .box3,
  .box4,
  .box5,
  .box6 {
    height: 100%;
    position: relative;
  }
  img {
    object-fit: cover;
    display: block;
    width: 100%;
    height: 300px;
    overflow: hidden;
  }
  .centered {
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 4rem;
    color: #fff;
  }
  hr {
    color: #fff;
    display: block;
    overflow: hidden;
    border-width: 2px;
  }
</style>
