<style>
  .wrapper_about {
    margin: 7%;
    height: 2500px;
  }
  h1 {
    font-size: 4rem;
    text-align: right;
  }
  h2 {
    font-size: 2rem;
    font-style: italic;
  }
  .text_box {
    text-transform: uppercase;
    font-size: 2rem;
  }
  .info_boxes {
    display: flex;
    text-align: center;
    font-size: 1.2rem;
    gap: 2rem;
  }
  img {
    width: 100%;
    object-fit: cover;
    display: block;
    overflow: hidden;
  }
  .img_grid {
    display: grid;
    max-height: 300px;
    grid-template-columns: 2fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
    grid-gap: 2rem;
  }
  .col_2 {
    display: flex;
    grid-gap: 2rem;
  }
  .span_2_col {
    grid-column: 1 / span 1;
    grid-row: 2 / span 1;
    max-height: fit-content;
  }
  .span_2_row {
    grid-column: 2 / span 1;
    grid-row: 1 / span 3;
    max-height: fit-content;
  }
  .grid-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, auto);
    grid-gap: 10px;
  }

  .grid-item {
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
